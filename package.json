{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Minimalistic boilerplate to quick-start React.js development in TypeScript, optimized for blazing-fast performance Bun & Vite ðŸš€",
  "author": "Raja Rakotonirina <raja.rakoto7@gmail.com>",
  "license": "",
  "type": "module",
  "main": "dist/index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RajaRakoto/react-boilerplate.git"
  },
  "homepage": "https://github.com/RajaRakoto/react-boilerplate#readme",
  "bugs": "https://github.com/RajaRakoto/react-boilerplate/issues",
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "reactjs",
    "react",
    "vitejs",
    "vite",
    "bunjs",
    "bun",
    "minimalist",
    "boilerplate",
    "template",
    "starter"
  ],
  "engines": {
    "react": ">= 18"
  },
  "scripts": {
    "preview": "vite preview",
    "clean": "rimraf build dist coverage playwright-report",
    "dev": "vite",
    "build": "bun run clean && tsc && vite build",
    "test:unit": "bun test ./tests/*.test.ts",
    "test:unit:watch": "bun test --watch ./tests/*.test.ts",
    "test:e2e": "rimraf playwright-report && playwright test ./e2e/*.spec.ts",
    "eslint": "eslint --config .eslintrc --report-unused-disable-directives --max-warnings 0 .",
    "prettier": "prettier --config .prettierrc --write .",
    "backup": "grunt backup",
    "pkg-check": "depcheck",
    "pkg-upgrade": "ncu --interactive --format group --packageManager bun",
    "versioning": "ungit",
    "npm-version:major": "npm version major",
    "npm-version:minor": "npm version minor",
    "npm-version:patch": "npm version patch",
    "script:sass-charset": "cd scripts && bun sass-charset.js"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bun": "latest",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.18",
    "depcheck": "^1.4.7",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "grunt-cli": "^1.4.3",
    "grunt-contrib-compress": "^2.0.0",
    "jest": "^29.7.0",
    "load-grunt-tasks": "^5.1.0",
    "npm-check-updates": "^16.14.15",
    "playwright": "^1.42.1",
    "postcss-import": "^16.0.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "sass": "^1.72.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2",
    "ungit": "^1.5.25",
    "vite": "^5.0.8"
  }
}
